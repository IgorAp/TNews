<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <title>Atualizar Dados</title>
</head>
<body>
    <%-include ../header%>
    <div class="container">
        <h1 class="text-center"><%= title%></h1>
        <form onsubmit="submit()" action="/users/<%=action%>" method="post">                            
            <%if(mensagem!=""){%>
            <div class="alert alert-dark col-md-6 offset-md-3" role="alert">
                <%=mensagem%>
            </div>
            <%}%>
            <div class="form-row ">
                <div class="form-group col-md-3 offset-md-3">
                    <p>Nome <input  value="<%=dados.nome%>" type="text" class="form-control" placeholder="" name="nome"></p>
                </div>
                <div class="form-group col-md-3">
                    <p>Sobrenome <input value="<%=dados.sobrenome%>" type="text" class="form-control" placeholder="" name="sobrenome"></p>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6 offset-md-3">
                    <p>
                        Email 
                        <input value="<%=dados.email%>" type="email" class="form-control" placeholder="" name="email">
                    </p>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6 offset-md-3">
                        <p>Senha Atual 
                            <input type="password" class="form-control" placeholder="" name="senhaAtual" id="senhaAtual">
                        </p> 
                </div>
                <div class="form-group col-md-3 offset-md-3">
                    <p>Nova Senha <input onchange="verificaSenha()" type="password" class="form-control" placeholder="" name="senha" id="senha" required></p>                
                </div>
                <div class="form-group col-md-3">
                    <p>Repita a Nova Senha<input onchange="verificaSenha()" type="password" class="form-control" placeholder="" name="senha2" id="senha2" required></p>                
                </div>
            </div>
            <div class="form-row">
                    <div class=" form-group col-md-3 offset-md-3">
                        <p>Estado
                            <select onclick="insereCidade()" class="custom-select" name="estado" id="estado">
                                <option value="<%=dados.estado%>"><%=dados.estado%> </option>
                            </select>
                        </p>
                    </div>              
                    <div class="form-group col-md-3">
                        <p>Cidade
                            <select class="custom-select" name="cidade" id="cidade">
                                <option value="<%=dados.cidade%>"><%=dados.cidade%></option>
                            </select>
                        </p>
                    </div> 
                </div>
            <button class="btn btn-primary col-md-3 offset-md-3" id="btnSubmit">Salvar</button>
           <a class="btn btn-danger col-md-3" href="/">Sair</a>
        </form>
    </div>
    <%-include ../header%>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="/javascripts/index.js"></script>
    
    <script>
	var senha1 = document.getElementById("senha")
  	var senha2 = document.getElementById("senha2");
		function verificaSenha(){
  			if(senha1.value != senha2.value) {
    			senha2.setCustomValidity("As senhas devem corresponder!");
  			} else {
    			senha2.setCustomValidity('');
  			}
		}

	senha1.onchange = verificaSenha;
	senha2.onkeyup = verificaSenha;
</script>
</body>
</html>